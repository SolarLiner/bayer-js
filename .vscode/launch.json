  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test program",
      "args": [
        "${workspaceFolder}/src/index.ts"
      ],
      "runtimeArgs": [
        "--nolazy", "-r", "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "skipFiles": [
        "node_modules",
        "<node_internals>/**"
      ]
    }
  ]
}
